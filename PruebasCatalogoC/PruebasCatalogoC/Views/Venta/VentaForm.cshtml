    VentaForm.prototype.MostrarTablaAbonos = function () {
        var self = this;
        var Tasa = 0;
        var PorcEnganche = 0;
        var Plazo = 12;
        var obj = self.doJsonRequest('@Url.Action("GetConfiguracion", "Configuracion")');
